<div>
    <h1 class="text-center mt-4 mb-5">Productos En Tiempo Real</h1>

    <div class="container">
        <form class="row g-3" id="product-form">
            <div class="col-md-6">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title">
            </div>
            <div class="col-md-6">
                <label for="code" class="form-label">Code</label>
                <input type="text" class="form-control" id="code">
            </div>
            <div class="col-12">
                <label for="description" class="form-label">Description</label>
                <input type="text" class="form-control" id="description" placeholder="Big T-shirt">
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary mt-5">Send</button>
                </div>
        </form>
    </div>


    <section class="container-fluid d-flex align-items-center  mt-4">
        <div class="row mx-4 justify-content-center ">
            {{#each products}}
            <div class="card col-4 mx-4 mb-4" style="width: 18rem;">
                <div class="card-body">
                    <h3>{{title}}</h3>
                    <p>{{description}}</p>
                    <p>Code: {{code}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </section>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/realTimeProducts.js"></script>